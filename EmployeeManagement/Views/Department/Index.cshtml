@model System.Collections.Generic.IList<EmployeeManagement.Models.Department>

@{
    Layout = null;
}

<!DOCTYPE html>

<html>

<head>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-EVSTQN3/azprG1Anm3QDgpJLIm9Nao0Yz1ztcQTwFspd3yD65VohhpuuCOmLASjC" crossorigin="anonymous">
    <title>Departments</title>
</head>
<body>
<div class="container">
    <div class="row justify-content-center">
        <div class="col-md-10">
            <div class="card">
                <div class="card-header">
                    List Departments
                    <a href="@Url.Action("Store", "Department")" class="btn btn-success">Add</a>
                </div>
                <div class="card-body">
                    <table class="table table-bordered">
                        <thead>
                        <tr>
                            <th>ID</th>
                            <th>Title</th>
                            <th>Desc</th>
                            <th>Parent</th>
                            <th>Created_at</th>
                            <th>Updated_at</th>
                            <th>Edit</th>
                            <th>Delete</th>
                        </tr>
                        </thead>
                        <tbody>
                        @foreach (var dpt in ViewBag.list)
                        {

                            <tr>
                                <td>@dpt.Id</td>
                                <td>@dpt.Name</td>
                                <td>@dpt.Desc</td>
                                <td>@dpt.ParentId</td>
                                <td>@dpt.Created</td>
                                <td>@dpt.Modified</td>
                                <td><a href="@Url.Action("Edit", "Department", new {id = dpt.Id})" class="">Modify</a></td>
                                <td><a href="@Url.Action("Delete", "Department", new {id = dpt.Id})" class="">Remove</a></td>
                            </tr>
                        }
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    </div>
</div>
<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/js/bootstrap.bundle.min.js" integrity="sha384-MrcW6ZMFYlzcLA8Nl+NtUVF0sA7MsXsP1UyJoMp4YLEuNSfAP+JcXn/tWtIaxVXM" crossorigin="anonymous"></script>
</body>
</html>