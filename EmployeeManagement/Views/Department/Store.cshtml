@model EmployeeManagement.Models.Department;

@{
    Layout = null;
}

<!DOCTYPE html>

<html>
<head>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-EVSTQN3/azprG1Anm3QDgpJLIm9Nao0Yz1ztcQTwFspd3yD65VohhpuuCOmLASjC" crossorigin="anonymous">
    <title>Add Department</title>
</head>
<body>
    <div class="container">
        <div class="row justify-content-center">
            <div class="col-md-8">
                <div class="card">
                    <div class="card-header">
                        Add Department
                    </div>
                    <div class="card-body">
                        @using (Html.BeginForm("Store", "Department", FormMethod.Post))
                        {
                        <div class="form-group">
                            <label>Tittle</label>
                            @Html.TextBoxFor(m => m.Name, new { @class = "form-control", @placeholder = "" })
                            @Html.ValidationMessageFor(m => m.Name, "", new { @class = "text-danger" })
                        </div>
                            <div class="form-group">
                                <label>Description</label>
                                @Html.TextBoxFor(m => m.Desc, new { @class = "form-control", @placeholder = "" })
                            </div>
                            <div class="form-group">
                                <label>ParentId</label>
                                @Html.TextBoxFor(m => m.ParentId, new { @class = "form-control", @placeholder = "" })
                            </div>
                            <div class="form-group">
                                <input type="submit" name="submit" value="Add Post" class="btn btn-success" />
                                @if (ViewBag.message != "")
                                {
                                    <span class="">@ViewBag.message</span>
                                }
                            </div>
                        }
                    </div>
                </div>
            </div>
        </div>
    </div>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/js/bootstrap.bundle.min.js" integrity="sha384-MrcW6ZMFYlzcLA8Nl+NtUVF0sA7MsXsP1UyJoMp4YLEuNSfAP+JcXn/tWtIaxVXM" crossorigin="anonymous"></script>
</body>
</html>