@model EmployeeManagement.ViewModels.EmployeeViewModel

@{
    Layout = null;
}

<html>
<head>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-EVSTQN3/azprG1Anm3QDgpJLIm9Nao0Yz1ztcQTwFspd3yD65VohhpuuCOmLASjC" crossorigin="anonymous">
    <title>title</title>
</head>
<body>
    <div class="container">
        <div class="row justify-content-center">
            <div class="col-md-8">
                <div class="card">
                    <div class="card-header">
                        Edit Post
                    </div>
                    <div class="card-body">
                        @Html.ActionLink("Show All Employees", "Index", "Employee")

                        @using (Html.BeginForm("Edit", "Employee", FormMethod.Post))
                        {@Html.AntiForgeryToken()
                            @Html.HiddenFor(e => e.Id)
                            <div class="form-group">
                                <label>Name</label>
                                @Html.TextBoxFor(e => e.Name, new {@class = "form-control"})
                            </div>
                            <div class="form-group">
                                <label>Description</label>
                                @Html.TextBoxFor(e => e.Desc, new {@class = "form-control"})
                            </div>
                            <div class="form-group">
                                <label>DOB</label>
                                @Html.TextBoxFor(e => e.DateOfBirth, new {@class = "form-control"})
                            </div>
                            <div class="form-group">
                                <label>Years of EXP</label>
                                @Html.TextBoxFor(e => e.YearsOfExperience, new {@class = "form-control"})
                            </div>
                            <div class="form-group">
                                <label>Phone Number</label>
                                @Html.TextBoxFor(e => e.PhoneNumber, new {@class = "form-control"})
                            </div>
                            <div class="form-group">
                                <label>Department</label>
                                @Html.TextBoxFor(e => e.DepartmentId, new {@class = "form-control"})
                            </div>
                            <div class="form-group">
                                <input type="submit" name="submit" value="Update" class="btn btn-success"/>
                                @if (ViewBag.message != "")
                                {
                                    <span class="badge badge-danger">@ViewBag.message</span>
                                }
                            </div>
                        }
                    </div>
                </div>
            </div>
        </div>
    </div>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/js/bootstrap.bundle.min.js" integrity="sha384-MrcW6ZMFYlzcLA8Nl+NtUVF0sA7MsXsP1UyJoMp4YLEuNSfAP+JcXn/tWtIaxVXM" crossorigin="anonymous"></script>
</body>
</html>